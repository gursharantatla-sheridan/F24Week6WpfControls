<Window x:Class="F24Week6WpfControls.LoginExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F24Week6WpfControls"
        mc:Ignorable="d"
        Title="LoginExample" Height="396" Width="484" FontSize="16" FontWeight="Bold">
    <Canvas>
        <Label Content="Username" Canvas.Left="136" Canvas.Top="101"/>
        <Label Content="Password" Canvas.Left="140" Canvas.Top="150"/>
        <TextBox x:Name="txtUsername" Canvas.Left="226" TextWrapping="Wrap" Canvas.Top="105" Width="120"/>
        <PasswordBox x:Name="txtPassword" Canvas.Left="226" Canvas.Top="154" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="btnLogin" Content="Login" Canvas.Left="136" Canvas.Top="217" Height="35" Width="85" HorizontalAlignment="Center" VerticalAlignment="Top" Click="btnLogin_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" Canvas.Left="261" Canvas.Top="217" Height="35" Width="85" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnCancel_Click"/>

    </Canvas>
</Window>
